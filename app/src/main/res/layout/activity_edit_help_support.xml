<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".HelpSupportProfile">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:contentDescription="Back button"
        android:scaleType="centerInside"
        android:src="@drawable/backbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->

    <!-- FAQ Section -->

    <TextView
        android:id="@+id/tvHelpSupportTitle"
        android:layout_width="247dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Help and Support"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.321"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFAQTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Frequently Asked Questions"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvHelpSupportTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scrollFAQ"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvFAQTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnContactSupport">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- FAQ Question 1 -->
            <TextView
                android:id="@+id/tvQuestion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Q: How can I create an account?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvAnswer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A: You can create an account by clicking the 'Sign Up' button on the login screen and filling in the required details."
                android:textSize="14sp"
                android:padding="8dp"
                android:layout_marginBottom="12dp" />

            <!-- FAQ Question 2 -->
            <TextView
                android:id="@+id/tvQuestion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Q: I forgot my password. What should I do?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvAnswer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A: Click the 'Forgot Password' link on the login screen. Enter your registered email address, and we will send you instructions to reset your password."
                android:textSize="14sp"
                android:padding="8dp"
                android:layout_marginBottom="12dp" />

            <!-- FAQ Question 3 -->
            <TextView
                android:id="@+id/tvQuestion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Q: How can I change my profile picture?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvAnswer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A: Go to the 'Profile' section, tap on your current profile picture, and upload a new image."
                android:textSize="14sp"
                android:padding="8dp"
                android:layout_marginBottom="12dp" />

            <!-- FAQ Question 4 -->
            <TextView
                android:id="@+id/tvQuestion4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Q: Can I update my personal details?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvAnswer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A: Yes, navigate to the 'Settings' page and select 'Edit Profile' to update your information."
                android:textSize="14sp"
                android:padding="8dp"
                android:layout_marginBottom="12dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Contact Support Button -->
    <Button
        android:id="@+id/btnContactSupport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Contact Support"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/scrollFAQ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
