<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HelpSupportProfile">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8A2BE2"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:padding="8dp"
            android:src="@drawable/icon_back"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/help_and_support"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <!-- FAQ Title -->
    <TextView
        android:id="@+id/tvFAQTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/frequently_asked_question"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FAQ Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollFAQ"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvFAQTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnContactSupport">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- FAQ 1 -->
            <TextView
                android:id="@+id/tvQuestion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_create_account_question"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvAnswer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_create_account_answer"
                android:textSize="14sp"
                android:paddingStart="8dp"
                android:paddingBottom="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="8dp" />

            <!-- FAQ 2 -->
            <TextView
                android:id="@+id/tvQuestion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_change_username_question"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvAnswer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_change_username_answer"
                android:textSize="14sp"
                android:paddingStart="8dp"
                android:paddingBottom="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="8dp" />

            <!-- FAQ 3 -->
            <TextView
                android:id="@+id/tvQuestion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_change_password_question"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvAnswer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_change_password_answer"
                android:textSize="14sp"
                android:paddingStart="8dp"
                android:paddingBottom="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="8dp" />

            <!-- FAQ 4 -->
            <TextView
                android:id="@+id/tvQuestion4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_change_profile_picture_question"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvAnswer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_change_profile_picture_answer"
                android:textSize="14sp"
                android:padding="8dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Contact Support Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContactSupport"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/contact_support"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cornerRadius="12dp"
        app:backgroundTint="#8A2BE2"
        app:layout_constraintTop_toBottomOf="@id/scrollFAQ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
